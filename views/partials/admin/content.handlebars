<main class="quest-admin mdl-layout__content">
   <div class="mdl-grid questionnaires-grid">


      <div class="mdl-card mdl-cell mdl-cell--4-col quest-card">
         <div>
            <h4 class="quest-card__title">Questionnaires</h4>
            <!-- Colored FAB button with ripple -->
               <button id="btn-create-questionnaire" class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored quest-button--top-right">
                  <i class="material-icons">add</i>
               </button>

               <div id="questionnaires-list-container">
                  <ul class="demo-list-three mdl-list">
                     {{#each questionnaires}}
                     {{> admin/components/questionnaire-list}}
                     {{/each}}
                  </ul>
               </div>
         </div>
      </div>
      
      <div class="mdl-card mdl-cell mdl-cell--4-col quest-card">
         <div id="quest-card__create-questionnaire" class="hidden">
            <h4 id="quest-card__create-questionnaire__title" class="quest-card__title">Create new questionnaire</h4>
            <button id="btn-close-questionnaire" class="mdl-button mdl-js-button quest-button--top-right">
               <i class="material-icons">close</i>
            </button>
         

            <div class="quest-card__container">

               {{> admin/components/questionnaire-create}}

            </div>
         </div>
      </div>
      <div class="mdl-card mdl-cell mdl-cell--4-col quest-card">

      </div>
   </div>

</main>